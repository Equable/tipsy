Words.find(1)

split_array = user_string.split()
[hello, world]

word_array =[]
split_array.each do |word|
  word_id = Word.find(name: word)
  if  word_id
    word_array << word_id.id
  else
    new_word_id = Word.create(word: word)
    word_array << new_word_id
  end
  UserSentence.create(sentence: word_array.to_s)
end


